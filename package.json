{
    "name": "esm-template",
    "version": "0.7.12",
    "description": "ESM Template Engine",
    "module": "main.js",
    "scripts": {
        "start": "node .",
        "build": "tsc --build tsconfig.json",
        "common-js": "tsc --build tsconfig.cjs.json",
        "ecma": "tsc --build tsconfig.esm.json",
        "compile": "npm run ecma && npm run common-js && npm run build",
        "prepublishOnly": "npm run compile"
    },
    "author": "Jacob B. Sanders <jacob.sanders@cloudhybrid.io> (https://github.com/iac-factory)",
    "license": "BSD-2-Clause",
    "dependencies": {
        "ansi-colors": "^4.1.1",
        "esm": "^3.2.25"
    },
    "devDependencies": {
        "@tsconfig/node16-strictest-esm": "^1.0.1",
        "@types/esm": "^3.2.0",
        "@types/node": "^17.0.31",
        "@typescript-eslint/eslint-plugin": "^5.22.0",
        "eslint": "^8.15.0",
        "eslint-plugin-import": "^2.26.0",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.4"
    },
    "exports": {
        "default": "./",
        "node": "./distribution",
        "require": "./distribution/cjs",
        "import": "./distribution/ecma"
    },
    "directories": {
        "bin": ".",
        "lib": "distribution"
    },
    "bin": {
        "esm-template": "./distribution/index.js"
    }
}
